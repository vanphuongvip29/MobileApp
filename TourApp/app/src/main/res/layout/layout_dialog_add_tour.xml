<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edit_tourName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:hint="tourName"
        android:padding="4dp"
        android:textColor="@color/black"
        android:layout_marginTop="40dp"/>
    <EditText
        android:id="@+id/edit_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:hint="price"
        android:inputType="numberDecimal"
        android:padding="4dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/edit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:hint="description"
        android:padding="4dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_location"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="location"
                android:inputType="text"
                android:padding="4dp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:id="@+id/imageLocation"
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_add_location_24" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_start_day"
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="start day"
                android:inputType="datetime"
                android:padding="4dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/imageStartDay"
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:src="@drawable/baseline_calendar_today_24" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edit_end_day"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_edittext"
            android:drawablePadding="8dp"
            android:hint="end day"
            android:inputType="datetime"
            android:padding="4dp"
            android:textColor="@color/black" />
        <ImageView
            android:id="@+id/imageEndDay"
            android:layout_width="82dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_calendar_today_24" />
    </LinearLayout>
    <EditText
        android:id="@+id/edit_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:hint="discount"
        android:inputType="numberDecimal"
        android:padding="4dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Category: "/>
        <Spinner
            android:id="@+id/spinnerCategory"
            android:textSize="20dp"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_tourImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/avt"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Avatar" />

        <Button
            android:id="@+id/btn_selectTourButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/purple"
            android:text="Select Avatar" />
    </LinearLayout>

</LinearLayout>